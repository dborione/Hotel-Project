{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
    <section class="row">
    {% if app.user %}      
        {% for client in client %}
            <div class="col-4 mt-4">
                <h2>Hi there! You are logged in as {{ client.clientFirstName }} {{ client.clientLastName }}.</h2>
                <p>You have one or several reservations: </p>
                {% for booking in booking %}
                    <p>You have booked the suite {{ booking.suite }},</p>
                    <p>from {{ booking.startDate |date('d-m-Y')}} to {{ booking.endDate |date('d-m-Y')}}.</p>
                {% endfor %}    
        {% endfor %}
    {% else %}
        <div class="text-center">
            Please 
            <a href="/login" class="text-indigo-700 hover:text-indigo-600">login</a>
            or
            <a href="/register" class="text-indigo-700 hover:text-indigo-600">sign up</a>
            .                        
        </div>
    {% endif %}
    

    
    </section>  
</div>
{% endblock %}
