{% extends 'base.html.twig' %}

{% block title %}Our Seven Hotels{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<section class="row">
    {% for hotel in hotel %}
        <div class="col-4 mt-4">
            <h2>{{ hotel.hotelName }}</h2>
            <p>{{ hotel.hotelAddress }}</p>
            <p>{{ hotel.hotelCity }}</p>
            {# <a href= path: app_suite/hotel.suite #}
            {# {{path("app_bookings_add", {id:suite.id}#}
            {% for suite in suite %}
                <a href="{{path("app_suites", {id: suite.id}) }}" class="btn">See suites</a>
            {% endfor %}
    {% endfor %}
</section>
{% endblock %}

